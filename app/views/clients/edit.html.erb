<h2>Edit Client</h2>

<%= form_with(model: @client, url: company_client_path(current_user.company.id), local: true) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :vatcode %><br />
    <%= f.text_field :vatcode, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autocomplete: "city" %>
  </div>

  <div class="actions">
    <%= f.submit "Edit" %>
  </div>
<% end %>
