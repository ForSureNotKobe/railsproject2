<h2>Edit Company Data</h2>

<%= form_with(model: current_user.company, local: true) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :vatcode %><br />
    <%= f.text_field :vatcode, autocomplete: "vatcode" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autocomplete: "city" %>
  </div>

  <div class="field">
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode, autocomplete: "postcode" %>
  </div>

  <div class="actions">
    <%= f.submit "Edit" %>
  </div>
<% end %>
