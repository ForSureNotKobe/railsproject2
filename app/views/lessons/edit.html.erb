<h2>Edit Lesson</h2>

<%= form_with(model: @lesson, url: company_lesson_path(current_user.company.id), local: true) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :time %><br />
    <%= f.text_field :time, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_field :note, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, autocomplete: "city" %>
  </div>

  <div class="actions">
    <%= f.submit "Edit" %>
  </div>
<% end %>
